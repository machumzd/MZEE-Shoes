{{>head}}

{{#if userData}}
{{>userNavLogged}}
{{else}}
{{>userNav}}
{{/if}}


<section class="h-100 h-custom" style="background-color: #fff;">
    <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-12">
                <div class="card card-registration card-registration-2"
                    style="border-radius: 15px; border: 1px solid black;">
                    <div class="card-body p-0">
                        <div class="row g-0">
                            <div class="col-lg-12">
                                <div class="p-5">
                                    <div class="d-flex justify-content-between align-items-center mb-5">
                                        <h1 class="fw-bold mb-0 text-black">Orders</h1>
                                        <h6 class="mb-0 text-muted">
                                            {{data.length}}
                                        </h6>
                                    </div>
                                    <hr class="my-4">
                                    {{#each data}}
                                   <h6 class="fw-bold text-danger"> order {{counter @index}}:-</h6>
                                   <p class=" text-success"> Bill amount:₹{{orderBill}}/-</p>
                                    {{#each items}}


                                    <div class="row d-flex justify-content-between align-items-center">
                                        <div class="col-md-2 col-lg-2 col-xl-2">
                                            <img src="/images/{{img1}} " class="img-fluid rounded-3"
                                                alt="Cotton T-shirt">
                                        </div>
                                        <div class="col-md-3 col-lg-3 col-xl-3">
                                            <h6 class="text-muted">{{category}}</h6>
                                            <a href="/user/product?id={{item}}" style="text-decoration: none">
                                                <h6 class="text-black mb-0">
                                                    {{productName}}
                                                </h6>
                                            </a>
                                        </div>
                                        <div class="col-md-3 col-lg-3 col-xl-1 d-flex">
                                            <h6>{{quantity}} Nos</h6>
                                        </div>
                                        <div class="col-md-3 col-lg-3 col-xl-1 d-flex">
                                            <h6 class="mb-0 itemPrice" id="price" value="">₹{{price}}/-
                                            </h6>
                                        </div>
                                        <div class="col-md-3 col-lg-3 col-xl-1 d-flex">
                                            <h6>Order {{orderStatus}} </h6>
                                        </div>
                                        <div class="col-md-3 col-lg-3 col-xl-1 d-flex">
                                            {{#ifeq orderStatus "Cancelled"}}
                                            <h6><button type="" disabled class="btn btn-secondary border-dark">cancelled</button>
                                            </h6>
                                            {{/ifeq}}
                                            
                                            {{#ifeq orderStatus "Delivered"}}
                                            <form action="/returnOrder?id={{_id}}"
                                                method="post">
                                                <h6><button type="submit" class="btn btn-danger border-dark">Return</button></h6>
                                            </form>
                                            {{/ifeq}}

                                           {{#ifeq orderStatus "Return initiated"}}
                                            <h6><button type="submit" disabled class="btn btn-secondary border-dark" >Returned</button>
                                            </h6>
                                           {{/ifeq}}

                                            {{#ifeq orderStatus "Processed"}}

                                                <a><button  onclick="Cancel('{{_id}}')" data-bs-toggle="modal" data-bs-target="#cancelBut" class="btn btn-danger border-dark">Cancel</button></a>
                                    
                                            {{/ifeq}}
                                        </div>
                                    </div>


                                    {{/each}}
                                    
                                        <hr class="text-primary "></hr>
                                    {{/each}}


                                    <div class="pt-5">
                                        <h6 class="mb-0"><a href="/profile" class="text-body"><i
                                                    class="fas fa-long-arrow-alt-left me-2"></i>Back to Profile</a>
                                        </h6>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>


{{>footer}}
{{>foot}}



<div class="modal fade" id="cancelBut" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1"
  aria-labelledby="staticBackdropLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="staticBackdropLabel">Cancel</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        Are you sure you want to Cancel this order?
        <input type="hidden" id="cancelID">
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>

        <button class="btn btn-danger mt-1 mb-1" onclick='return confirmCancel()' id="cancel-Button">Cancel</button>


      </div>
    </div>
  </div>
</div>



<script>
  function Cancel(data) {
    document.getElementById('cancelID').value = data
  }
  function confirmCancel() {
    const id = document.getElementById("cancelID").value
    console.log(id)
    fetch("/cancelOrder", {
      method: "POST",
      headers: {
        "Content-Type": "application/json"
      },
      body: JSON.stringify({
        id: id
      })
    })
      .then(response => {
        $('#cancelBut').modal('hide')
        console.log(response) 
      })

      .then(data => {
        location.reload()
      })
      .catch(error => {
        console.log(error);
      });
  };
</script>