
{{>adminNav}}


<section class="h-100 h-custom" style="background-color: #ffff;">
    <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-12 border-0">
                <div class="card card-registration card-registration-2 border-0">
                    <div class="card-body p-0">
                        <div class="row g-0">
                            <div class="col-lg-8">
                                <div class="p-5">
                                    <div class="d-flex justify-content-between align-items-center mb-5">
                                        <h1 class="fw-bold mb-0 text-black">Sales overview</h1>
                                        <a href="/admin/dashboard/report" style="text-decoration: none">
                                            <h6 class="mb-0 text-muted">
                                                {{ categories.length}}<i class="fa fa-download" aria-hidden="true"></i>
                                                Download Report
                                            </h6>
                                        </a>
                                    </div>
                                    <hr class="my-4">





                                    <div class="row mb-4 d-flex justify-content-between align-items-center">

                                        <div>
                                            <canvas id="myChart"></canvas>
                                        </div>

                                        <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

                                        <script>
                                            const ctx = document.getElementById('myChart');

                                            new Chart(ctx, {
                                                type: 'line',
                                                data: {
                                                    labels: ['january', 'February', 'March', 'April', 'May', 'June','July','August','september','october','november','december'],
                                                    datasets: [{
                                                        label: 'Sales',
                                                        data: [12, 19, 3, 5, 2, 3,9,5,6,8,8,9],
                                                        borderWidth: 4
                                                    }]
                                                },
                                                options: {
                                                    scales: {
                                                        y: {
                                                            beginAtZero: true
                                                        }
                                                    }
                                                }
                                            });
                                        </script>



                                    </div>

                                    <hr class="my-4">


                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>


<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

<script src="/javascripts/chart.js"></script>


